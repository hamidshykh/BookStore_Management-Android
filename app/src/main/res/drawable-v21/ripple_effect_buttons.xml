<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:color="#7EFFFFFF"
    >

    <item>
        <shape android:shape="rectangle">
            <corners
                android:radius="33dp"
                />
            <solid
                android:color="#542208B8"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="270dp"
                android:height="48dp"
                />
            <stroke
                android:width="3dp"
                android:color="#001D0E38"
                />

        </shape>
    </item>

</ripple>